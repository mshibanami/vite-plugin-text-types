{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "types": ["vite/client", "node"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
